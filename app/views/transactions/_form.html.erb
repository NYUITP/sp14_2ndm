
  <div class="container">
   <div class="row" >
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <%= form_for(@transaction, :html => { :class => "form-horizontal"} ) do |f| %>
    <% if @transaction.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

        <ul>
        <% @transaction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="panel panel-default">
      <div class="panel-heading">Trade</div>
      <div class="panel-body">
        <div class="form-group">
          <div class="row">
            <div class="col-xs-4">
              <%= f.collection_select(:exchangeid, Exchange.all, :id, :name, {:prompt => "Exchange"}, {:class => "form-control"}) %>
            </div>
            <div class="col-xs-4">
              <%= f.select(:order_type, [['Order Type',nil],['Buy','Buy'],['Sell','Sell']], {}, {:class => "form-control"})%>
            </div>
            <div class="col-xs-4">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-4">
            </div>
            <div class="col-xs-4">
              <%= f.text_field :btc, :placeholder => "Quantity", class: "form-control"%>
            </div>
            <div class="col-xs-4">
              <%= f.text_field :usd, :placeholder => "Price", class: "form-control"   %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-4">
            </div>
            <div class="col-xs-4">
              <%= f.submit 'Place Trade', :class => 'btn btn-default' %>
            </div>
            <div class="col-xs-4">
            </div>
          </div>
        </div>
        <div class = "form-group">
          <div class="col-xs-2">
            </div>
            <div class="col-xs-8">
            
          <div class="row">
            <p class="text-warning"><em>USD values for LIMIT Buy/Sell supported by Bitstamp Only</em></p>
          </div>
          </div>
          <div class="col-xs-2">
            </div>
        </div>
      </div>
      <%= f.hidden_field :exchange, :value => nil %>
      <%= f.hidden_field :username, :value => current_user.username %>
    </div>
  <% end %>
  </div>
  <div class="col-md-2"></div>
</div>
</div>
</div>
