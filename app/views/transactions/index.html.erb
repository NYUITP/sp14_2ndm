<script type="text/javascript">
navdash = document.getElementById("navdash");
      navtrans = document.getElementById("navtrans");
      navtran = document.getElementById("navtran");
      navhold = document.getElementById("navhold");
      navdash.className = "";
      navtrans.className = "";
      navtran.className = "active";
      navhold.className = "";

      //alert(document.referrer);
      window.onload = function() {
        $("table > tbody > tr:first").addClass("success");
      }
</script>
<div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="panel panel-primary">
      <div class="panel-heading">Transactions</div>
      <table class="table table-hover table-condensed ">
        <thead>
          <tr>
            <th>ID</th>
            <th>Exchange </th>
            <th>Type</th>
            <th>BTC </th>
            <th>USD </th>
            <th>Balance BTC</th>
            <th>Name</th>
            <th>Created At </th>
          </tr>
        </thead>
        <tbody>
          <% @transactions.order('created_at DESC').each do |transaction| %>
            <tr>
              <td><%= link_to transaction.id, transaction %> </td>
              <td><%= transaction.exchange.name %> </td>
              <td><%= transaction.order_type %> </td>
              <td><%= transaction.btc %> </td>
              <td><%= transaction.usd.round(2) %> </td>
              <td><%= transaction.balance %> </td>
              
              <td><%= User.where(:username => transaction.username).first.firstname %>&nbsp;<%= User.where(:username => transaction.username).first.lastname %> </td>
              <td><%= transaction.created_at.localtime %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<div class="col-md-2"></div>
