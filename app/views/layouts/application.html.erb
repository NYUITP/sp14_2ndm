    <script>
    function round(num) 
  { return +(Math.round(num + "e+2")  + "e-2");
  }
    var bsInfo;
    var cbInfo
      function updateVals(){
        jQuery.ajax({ 
          type: 'GET',
          url: '/home/ticker' ,
          dataType: 'json', 
          success: function(data) { 
            bsInfo = data.bitstamp;
            element = document.getElementById("bsVal");
            var val = element.textContent;
            val = val.substring(1);
            var bsVal = parseFloat(val);
            element.textContent = "$"+bsInfo;
            var newBsVal = parseFloat(bsInfo);
            element = document.getElementById("bsLbl");
            if(newBsVal > bsVal){
              element.className = "label label-success"
            }
            else if(newBsVal==bsVal){
              element.className = "label label-primary"
            }
            else
              element.className = "label label-danger"

            cbInfo = data.coinbase;
            element = document.getElementById("cbVal");
            val = element.textContent;
            val  = val.substring(1);
            var cbVal = parseFloat(val);
            element.textContent = cbInfo;
            var newCbVal = parseFloat(cbInfo.substring(1));
            element = document.getElementById("cbLbl");
            if(newCbVal > cbVal){
              element.className = "label label-success"
            }
            else if(newCbVal==cbVal){
              element.className = "label label-primary"
            }
            else
              element.className = "label label-danger"
          }
        });
    }
    updateVals();
    window.setInterval(updateVals, 10000);
    $(document).ready(function(){
      
