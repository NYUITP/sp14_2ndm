  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <p id="alertBox"></p>
</div>
</div>
  <script>
    var alertEvalFunction;
    function evalAlert(priceDiff){

      if(cbInfo != null && bsInfo != null){
        diff = Math.abs(parseFloat(bsInfo) - parseFloat(cbInfo.substring(1)));
        if(diff >= priceDiff){
          alertElement = document.getElementById("alertBox");
          alertEvalFunction = setTimeout(function(){evalAlert(priceDiff)}, 1000);
          alertElement.innerHTML = "<div class=\"alert alert-success alert-dismissable\"><button  onclick=\"window.clearTimeout(alertEvalFunction)\" type=\"button\" class=\"close\" data-dismiss=\"alert\" aria-hidden=\"true\">\&times\;</button>ATTN: There is a difference of $"+round(diff)+" between the two exchanges!</div>";
        }
        else{
          alertElement = document.getElementById("alertBox");
          alertElement.textContent = "";
          alertElement.className = ""
          alertEvalFunction = setTimeout(function(){evalAlert(priceDiff)}, 1000);
        }
        
      }
      else{
        alertEvalFunction = setTimeout(function(){evalAlert(priceDiff)}, 1000);
      }
      
    }
    //function checkAlerts(){
      updateVals();
      <% if user_signed_in? %>
        <% Alert.all.where(:user => current_user).each do |alert1| %>
          evalAlert(<%= alert1.price_difference %>);
        <% end %>
      <% end %>
  </script>
