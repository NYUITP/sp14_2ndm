
  <div class="container">
   <div class="row" >
  <div class="col-md-3"></div>
  <div class="col-md-6">
  <%= form_for(@transaction) do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% @transaction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="panel panel-primary" style="width: 500px;">
  <div class="panel-heading">Trade</div>
  <table class="table table-condensed">
    <tbody>
      <tr>
      <td>
        <%= f.collection_select(:exchangeid, Exchange.all, :id, :name, {:prompt => "Exchange"}) %>
      </td>
      <td>
        <%= f.select(:order_type, [['Order Type',nil],['Buy','Buy'],['Sell','Sell']])%>
      </td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td>
        <%= f.text_field :btc, :placeholder => "Quantity"%>
      </td>
      <td>
        <%= f.text_field :usd, :placeholder => "Price"   %>
      </td>
    </tr>
      <tr>
        <td></td>
      <td>
        <%= f.submit %>
      </td>
     <td></td>
    </tr>
    <tr>
      <td colspan=3><p class="text-warning"><em>USD values for LIMIT Buy/Sell supported by Bitstamp Only</em></p></td>
    </tr>
  </tbody>
  </table>
  <%= f.hidden_field :exchange, :value => nil %>
  <%= f.hidden_field :username, :value => current_user.username %>
</div>
  <% end %>
  </div>
  <div class="col-md-3"></div>
</div>
</div>
</div>
